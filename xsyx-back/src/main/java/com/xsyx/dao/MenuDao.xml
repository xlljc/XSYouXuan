<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xsyx.dao.MenuDao">




    <!-- resultMap映射 -->
    <resultMap id="MenuMap" type="Menu">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="url" property="url"/>
        <result column="layer" property="layer"/>
        <result column="type" property="type"/>
        <association property="parent" column="{fk=parent}"
           select="com.xsyx.dao.MenuDao.a_Menu_By_parent" javaType="Menu" fetchType="lazy"/>
    </resultMap>

    <!-- 查询所有方法 -->
    <select id="queryAll" resultMap="MenuMap">
       select parent,name,id,type,url,layer from menu;
    </select>

    <!-- 根据主键id查询数据方法 -->
    <select id="queryById" parameterType="int" resultMap="MenuMap">
       select parent,name,id,type,url,layer from menu where id = #{id};
    </select>

    <!-- 根据Menu条件查询数据方法 -->
    <select id="query" resultMap="MenuMap">
        select parent,name,id,type,url,layer 
        from menu 
        <where>
            <if test="id != null"> and id = #{id}</if>
            <if test="name != null"> and name = #{name}</if>
            <if test="url != null"> and url = #{url}</if>
            <if test="layer != null"> and layer = #{layer}</if>
            <if test="type != null"> and type = #{type}</if>
            <if test="parent != null">
                 <if test="parent.id != null"> and parent = #{parent.id}</if>
            </if> 
        </where>
    </select>

    <!-- 根据Menu插入数据方法 -->
    <insert id="insert" parameterType="Menu" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into menu (id,name,url,layer,type,parent) values 
        (
            #{id},
            #{name},
            #{url},
            #{layer},
            #{type},
            #{parent.id}
        ); 
    </insert>

    <!-- 根据Menu插入多条数据方法 -->
    <insert id="inserts" parameterType="List" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into menu (id,name,url,layer,type,parent) values 
        <foreach collection="menus" item="item" separator=",">
            (
                #{item.id},
                #{item.name},
                #{item.url},
                #{item.layer},
                #{item.type},
                #{item.parent.id}
            ) 
        </foreach>
    </insert>

    <!-- 根据Menu条件修改单条数据方法,从传入对象获取主键id -->
    <update id="updateById" parameterType="Menu">
        update menu 
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="url != null">url = #{url},</if>
            <if test="layer != null">layer = #{layer},</if>
            <if test="type != null">type = #{type},</if>
            <if test="parent != null">
                <if test="parent.id != null">parent = #{parent.id},</if>
            </if>
        </set>
        where id = #{id}
    </update>

    <!-- 关联查询,调用者:"com.xsyx.dao.MenuDao" -->
    <select id="a_Menu_By_parent" resultMap="MenuMap">
       select parent,name,id,type,url,layer from menu where id = #{fk};
    </select>


</mapper>