<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xsyx.dao.ComOrderDao">

    <!-- resultMap映射 -->
    <resultMap id="ComOrderMap" type="ComOrder">
        <id column="id" property="id"/>
        <result column="ordstate" property="ordstate"/>
        <result column="order_number" property="orderNumber"/>
        <result column="isdelete" property="isdelete"/>
        <result column="totlemoney" property="totlemoney"/>
        <association property="sid" column="{fk=sid}"
                     select="com.xsyx.dao.ShopcarDao.a_Shopcar_By_sid" javaType="Shopcar" fetchType="lazy"/>

    </resultMap>

    <!-- 查询所有方法 -->
    <select id="queryAll" resultMap="ComOrderMap">
        select order_number,ordstate,id,isdelete,sid from com_order;
    </select>

    <select id="queryAlls" resultMap="ComOrderMap">
        select o.id,o.order_number,o.ordstate,isdelete,s.number,c.image,c.name,c.price,c.state
             ,o.sid,s.cid
        from com_order o
                 inner join shopcar s on o.sid = s.id
                 inner join commodity c on s.cid = c.id;
    </select>

    <!-- 根据主键id查询数据方法 -->
    <select id="queryById" parameterType="int" resultMap="ComOrderMap">
        select order_number,ordstate,id,isdelete,sid,totlemoney from com_order where id = #{id};
    </select>

    <!-- 根据ComOrder条件查询数据方法 -->
    <select id="query" resultMap="ComOrderMap">
        select order_number,ordstate,id,isdelete,sid,totlemoney
        from com_order
        <where>
            <if test="id != null"> and id = #{id}</if>
            <if test="ordstate != null"> and ordstate = #{ordstate}</if>
            <if test="orderNumber != null"> and order_number = #{orderNumber}</if>
            <if test="isdelete != null"> and isdelete = #{isdelete}</if>
            <if test="sid != null">
                <if test="sid.id != null"> and sid = #{sid.id}</if>
            </if>
        </where>
    </select>

    <!-- 根据ComOrder插入数据方法 -->
    <insert id="insert" parameterType="ComOrder" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into com_order (id,ordstate,order_number,isdelete,sid,totlemoney) values
        (
        #{id},
        #{ordstate},
        #{orderNumber},
        <if test="isdelete != null">#{isdelete}</if><if test="isdelete == null">default</if>,
        #{sid.id},
        #{totlemoney}
        );
    </insert>

    <!-- 根据ComOrder插入多条数据方法 -->
    <insert id="inserts" parameterType="List" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into com_order (id,ordstate,order_number,isdelete,sid) values
        <foreach collection="comorders" item="item" separator=",">
            (
            #{item.id},
            #{item.ordstate},
            #{item.orderNumber},
            <if test="item.isdelete != null">#{item.isdelete}</if><if test="item.isdelete == null">default</if>,
            #{item.sid.id}
            )
        </foreach>
    </insert>

    <!-- 根据ComOrder条件修改单条数据方法,从传入对象获取主键id -->
    <update id="updateById" parameterType="ComOrder" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        update com_order
        <set>
            <if test="ordstate != null">ordstate = #{ordstate},</if>
            <if test="orderNumber != null">order_number = #{orderNumber},</if>
            <if test="isdelete != null">isdelete = #{isdelete},</if>
            <if test="sid != null">
                <if test="sid.id != null">sid = #{sid.id},</if>
            </if>
        </set>
        where id = #{id}
    </update>

<!--    根据UID查询订单-->
    <select id="queryAllByUid" resultMap="ComOrderMap">
        select c.id,c.isdelete,c.order_number,c.totlemoney, c.ordstate,c2.name,u.uname,c.sid from com_order c
        inner join shopcar s on c.sid = s.id
        inner join user u on s.uid = u.id
        inner join commodity c2 on s.cid = c2.id
        where u.id=#{uid} and  c.ordstate = #{ordstate}
    </select>

</mapper>