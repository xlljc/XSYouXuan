<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xsyx.dao.EmployeeDao">




    <!-- resultMap映射 -->
    <resultMap id="EmployeeMap" type="Employee">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="password" property="password"/>
        <result column="image" property="image"/>
        <result column="sex" property="sex"/>
        <result column="phone" property="phone"/>
        <result column="ic_card" property="icCard"/>
        <result column="address" property="address"/>
        <result column="email" property="email"/>
        <result column="remark" property="remark"/>
        <result column="last_login_time" property="lastLoginTime"/>
        <result column="state" property="state"/>
    </resultMap>

    <!-- 查询所有方法 -->
    <select id="queryAll" resultMap="EmployeeMap">
       select image,password,ic_card,address,phone,sex,name,remark,id,state,last_login_time,email from employee;
    </select>

    <!-- 根据主键id查询数据方法 -->
    <select id="queryById" parameterType="int" resultMap="EmployeeMap">
       select image,password,ic_card,address,phone,sex,name,remark,id,state,last_login_time,email from employee where id = #{id};
    </select>

    <!-- 根据Employee条件查询数据方法 -->
    <select id="query" resultMap="EmployeeMap">
        select image,password,ic_card,address,phone,sex,name,remark,id,state,last_login_time,email
        from employee 
        <where>
            <if test="id != null"> and id = #{id}</if>
            <if test="name != null"> and name = #{name}</if>
            <if test="password != null"> and password = #{password}</if>
            <if test="image != null"> and image = #{image}</if>
            <if test="sex != null"> and sex = #{sex}</if>
            <if test="phone != null"> and phone = #{phone}</if>
            <if test="icCard != null"> and ic_card = #{icCard}</if>
            <if test="address != null"> and address = #{address}</if>
            <if test="email != null"> and email = #{email}</if>
            <if test="remark != null"> and remark = #{remark}</if>
            <if test="lastLoginTime != null"> and last_login_time = #{lastLoginTime}</if>
            <if test="state != null"> and state = #{state}</if>
        </where>
    </select>

    <!-- 根据Employee插入数据方法 -->
    <insert id="insert" parameterType="Employee" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into employee (id,name,password,image,sex,phone,ic_card,address,email,remark,last_login_time,state) values
        (
            #{id},
            #{name},
            <if test="password != null">#{password}</if><if test="password == null">default</if>,
            #{image},
            #{sex},
            #{phone},
            #{icCard},
            #{address},
            #{email},
            #{remark},
            #{lastLoginTime},
            #{state}
        ); 
    </insert>

    <!-- 根据Employee插入多条数据方法 -->
    <insert id="inserts" parameterType="List" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into employee (id,name,password,image,sex,phone,ic_card,address,email,remark,last_login_time,state) values
        <foreach collection="employees" item="item" separator=",">
            (
                #{item.id},
                #{item.name},
                <if test="item.password != null">#{item.password}</if><if test="item.password == null">default</if>,
                #{item.image},
                #{item.sex},
                #{item.phone},
                #{item.icCard},
                #{item.address},
                #{item.email},
                #{item.remark},
                #{item.lastLoginTime},
                #{item.state}
            ) 
        </foreach>
    </insert>

    <!-- 根据Employee条件修改单条数据方法,从传入对象获取主键id -->
    <update id="updateById" parameterType="Employee">
        update employee 
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="password != null">password = #{password},</if>
            <if test="image != null">image = #{image},</if>
            <if test="sex != null">sex = #{sex},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="icCard != null">ic_card = #{icCard},</if>
            <if test="address != null">address = #{address},</if>
            <if test="email != null">email = #{email},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="state != null">state = #{state},</if>
        </set>
        where id = #{id}
    </update>

    <!-- 关联查询,调用者:"com.xsyx.dao.PurchaseorderDao" -->
    <select id="a_Employee_By_approvedby" resultMap="EmployeeMap">
       select image,password,ic_card,address,phone,sex,name,remark,id,state,last_login_time,email from employee where id = #{fk};
    </select>


    <!-- 关联查询,调用者:"com.xsyx.dao.PurchaseorderDao" -->
    <select id="a_Employee_By_applicant" resultMap="EmployeeMap">
       select image,password,ic_card,address,phone,sex,name,remark,id,state,last_login_time,email from employee where id = #{fk};
    </select>


</mapper>