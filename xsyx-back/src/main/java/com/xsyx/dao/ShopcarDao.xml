<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xsyx.dao.ShopcarDao">




    <!-- resultMap映射 -->
    <resultMap id="ShopcarMap" type="Shopcar">
        <id column="id" property="id"/>
        <result column="number" property="number"/>
        <result column="jointime" property="jointime"/>
        <result column="totalprice" property="totalprice"/>
        <association property="cid" column="{fk=cid}"
           select="com.xsyx.dao.CommodityDao.a_Commodity_By_cid" javaType="Commodity" fetchType="lazy"/>
        <association property="uid" column="{fk=uid}"
           select="com.xsyx.dao.UserDao.a_User_By_uid" javaType="User" fetchType="lazy"/>
    </resultMap>

    <!-- 查询所有方法 -->
    <select id="queryAll" resultMap="ShopcarMap">
       select number,uid,jointime,totalprice,id,cid from shopcar;
    </select>

    <!-- 根据主键id查询数据方法 -->
    <select id="queryById" parameterType="int" resultMap="ShopcarMap">
       select number,uid,jointime,totalprice,id,cid from shopcar where id = #{id};
    </select>

    <!-- 根据Shopcar条件查询数据方法 -->
    <select id="query" resultMap="ShopcarMap">
        select number,uid,jointime,totalprice,id,cid 
        from shopcar 
        <where>
            <if test="id != null"> and id = #{id}</if>
            <if test="number != null"> and number = #{number}</if>
            <if test="jointime != null"> and jointime = #{jointime}</if>
            <if test="totalprice != null"> and totalprice = #{totalprice}</if>
            <if test="cid != null">
                 <if test="cid.id != null"> and cid = #{cid.id}</if>
            </if>
            <if test="uid != null">
                 <if test="uid.id != null"> and uid = #{uid.id}</if>
            </if> 
        </where>
    </select>

    <!-- 根据Shopcar插入数据方法 -->
    <insert id="insert" parameterType="Shopcar" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into shopcar (id,number,jointime,totalprice,cid,uid) values 
        (
            #{id},
            #{number},
            <if test="jointime != null">#{jointime}</if><if test="jointime == null">default</if>,
            #{totalprice},
            #{cid.id},
            #{uid.id}
        ); 
    </insert>

    <!-- 根据Shopcar插入多条数据方法 -->
    <insert id="inserts" parameterType="List" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into shopcar (id,number,jointime,totalprice,cid,uid) values 
        <foreach collection="shopcars" item="item" separator=",">
            (
                #{item.id},
                #{item.number},
                <if test="item.jointime != null">#{item.jointime}</if><if test="item.jointime == null">default</if>,
                #{item.totalprice},
                #{item.cid.id},
                #{item.uid.id}
            ) 
        </foreach>
    </insert>

    <!-- 根据Shopcar条件修改单条数据方法,从传入对象获取主键id -->
    <update id="updateById" parameterType="Shopcar">
        update shopcar 
        <set>
            <if test="number != null">number = #{number},</if>
            <if test="jointime != null">jointime = #{jointime},</if>
            <if test="totalprice != null">totalprice = #{totalprice},</if>
            <if test="cid != null">
                <if test="cid.id != null">cid = #{cid.id},</if>
            </if>
            <if test="uid != null">
                <if test="uid.id != null">uid = #{uid.id},</if>
            </if>
        </set>
        where id = #{id}
    </update>

    <!-- 关联查询,调用者:"com.xsyx.dao.ComOrderDao" -->
    <select id="a_Shopcar_By_sid" resultMap="ShopcarMap">
       select number,uid,jointime,totalprice,id,cid from shopcar where id = #{fk};
    </select>


</mapper>