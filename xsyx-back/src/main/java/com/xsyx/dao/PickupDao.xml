<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xsyx.dao.PickupDao">




    <!-- resultMap映射 -->
    <resultMap id="PickupMap" type="Pickup">
        <id column="id" property="id"/>
        <result column="address" property="address"/>
        <result column="phone" property="phone"/>
        <result column="ptime" property="ptime"/>
        <result column="pstate" property="pstate"/>
        <result column="uid" property="uid"/>
    </resultMap>

    <!-- 查询所有方法 -->
    <select id="queryAll" resultMap="PickupMap">
       select uid,address,phone,pstate,id,ptime from pickup;
    </select>

    <!-- 根据主键id查询数据方法 -->
    <select id="queryById" parameterType="int" resultMap="PickupMap">
       select uid,address,phone,pstate,id,ptime from pickup where id = #{id};
    </select>

    <!-- 根据Pickup条件查询数据方法 -->
    <select id="query" resultMap="PickupMap">
        select uid,address,phone,pstate,id,ptime 
        from pickup 
        <where>
            <if test="id != null"> and id = #{id}</if>
            <if test="address != null"> and address = #{address}</if>
            <if test="phone != null"> and phone = #{phone}</if>
            <if test="ptime != null"> and ptime = #{ptime}</if>
            <if test="pstate != null"> and pstate = #{pstate}</if>
            <if test="uid != null"> and uid = #{uid}</if> 
        </where>
    </select>

    <!-- 根据Pickup插入数据方法 -->
    <insert id="insert" parameterType="Pickup" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into pickup (id,address,phone,ptime,pstate,uid) values 
        (
            #{id},
            #{address},
            #{phone},
            <if test="ptime != null">#{ptime}</if><if test="ptime == null">default</if>,
            #{pstate},
            #{uid}
        ); 
    </insert>

    <!-- 根据Pickup插入多条数据方法 -->
    <insert id="inserts" parameterType="List" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into pickup (id,address,phone,ptime,pstate,uid) values 
        <foreach collection="pickups" item="item" separator=",">
            (
                #{item.id},
                #{item.address},
                #{item.phone},
                <if test="item.ptime != null">#{item.ptime}</if><if test="item.ptime == null">default</if>,
                #{item.pstate},
                #{item.uid}
            ) 
        </foreach>
    </insert>

    <!-- 根据Pickup条件修改单条数据方法,从传入对象获取主键id -->
    <update id="updateById" parameterType="Pickup">
        update pickup 
        <set>
            <if test="address != null">address = #{address},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="ptime != null">ptime = #{ptime},</if>
            <if test="pstate != null">pstate = #{pstate},</if>
            <if test="uid != null">uid = #{uid},</if>
        </set>
        where id = #{id}
    </update>

</mapper>