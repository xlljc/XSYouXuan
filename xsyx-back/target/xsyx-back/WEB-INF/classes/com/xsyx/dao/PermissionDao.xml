<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xsyx.dao.PermissionDao">




    <!-- resultMap映射 -->
    <resultMap id="PermissionMap" type="Permission">
        <id column="id" property="id"/>
        <result column="menu" property="menu"/>
        <result column="role" property="role"/>
    </resultMap>

    <!-- 查询所有方法 -->
    <select id="queryAll" resultMap="PermissionMap">
       select role,id,menu from permission;
    </select>

    <!-- 根据主键id查询数据方法 -->
    <select id="queryById" parameterType="int" resultMap="PermissionMap">
       select role,id,menu from permission where id = #{id};
    </select>

    <!-- 根据Permission条件查询数据方法 -->
    <select id="query" resultMap="PermissionMap">
        select role,id,menu 
        from permission 
        <where>
            <if test="id != null"> and id = #{id}</if>
            <if test="menu != null"> and menu = #{menu}</if>
            <if test="role != null"> and role = #{role}</if> 
        </where>
    </select>

    <!-- 根据Permission插入数据方法 -->
    <insert id="insert" parameterType="Permission" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into permission (id,menu,role) values 
        (
            #{id},
            #{menu},
            #{role}
        ); 
    </insert>

    <!-- 根据Permission插入多条数据方法 -->
    <insert id="inserts" parameterType="List" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into permission (id,menu,role) values 
        <foreach collection="permissions" item="item" separator=",">
            (
                #{item.id},
                #{item.menu},
                #{item.role}
            ) 
        </foreach>
    </insert>

    <!-- 根据Permission条件修改单条数据方法,从传入对象获取主键id -->
    <update id="updateById" parameterType="Permission">
        update permission 
        <set>
            <if test="menu != null">menu = #{menu},</if>
            <if test="role != null">role = #{role},</if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteBy" parameterType="Permission">
        delete from permission where role = #{role} and menu = #{menu}
    </delete>

</mapper>