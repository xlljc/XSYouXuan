<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xsyx.dao.ComImageDao">




    <!-- resultMap映射 -->
    <resultMap id="ComImageMap" type="ComImage">
        <id column="id" property="id"/>
        <result column="commodity" property="commodity"/>
        <result column="url" property="url"/>
    </resultMap>

    <!-- 查询所有方法 -->
    <select id="queryAll" resultMap="ComImageMap">
       select commodity,id,url from com_image;
    </select>

    <!-- 根据主键id查询数据方法 -->
    <select id="queryById" parameterType="int" resultMap="ComImageMap">
       select commodity,id,url from com_image where id = #{id};
    </select>

    <!-- 根据ComImage条件查询数据方法 -->
    <select id="query" resultMap="ComImageMap">
        select commodity,id,url 
        from com_image 
        <where>
            <if test="id != null"> and id = #{id}</if>
            <if test="commodity != null"> and commodity = #{commodity}</if>
            <if test="url != null"> and url = #{url}</if> 
        </where>
    </select>

    <!-- 根据ComImage插入数据方法 -->
    <insert id="insert" parameterType="ComImage" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into com_image (id,commodity,url) values 
        (
            #{id},
            #{commodity},
            #{url}
        ); 
    </insert>

    <!-- 根据ComImage插入多条数据方法 -->
    <insert id="inserts" parameterType="List" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into com_image (id,commodity,url) values 
        <foreach collection="comimages" item="item" separator=",">
            (
                #{item.id},
                #{item.commodity},
                #{item.url}
            ) 
        </foreach>
    </insert>

    <!-- 根据ComImage条件修改单条数据方法,从传入对象获取主键id -->
    <update id="updateById" parameterType="ComImage">
        update com_image 
        <set>
            <if test="commodity != null">commodity = #{commodity},</if>
            <if test="url != null">url = #{url},</if>
        </set>
        where id = #{id}
    </update>

</mapper>