<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xsyx.dao.ComLabelDao">




    <!-- resultMap映射 -->
    <resultMap id="ComLabelMap" type="ComLabel">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
    </resultMap>

    <!-- 查询所有方法 -->
    <select id="queryAll" resultMap="ComLabelMap">
       select name,id from com_label;
    </select>

    <!-- 根据主键id查询数据方法 -->
    <select id="queryById" parameterType="int" resultMap="ComLabelMap">
       select name,id from com_label where id = #{id};
    </select>

    <!-- 根据ComLabel条件查询数据方法 -->
    <select id="query" resultMap="ComLabelMap">
        select name,id 
        from com_label 
        <where>
            <if test="id != null"> and id = #{id}</if>
            <if test="name != null"> and name = #{name}</if> 
        </where>
    </select>

    <!-- 根据ComLabel插入数据方法 -->
    <insert id="insert" parameterType="ComLabel" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into com_label (id,name) values 
        (
            #{id},
            #{name}
        ); 
    </insert>

    <!-- 根据ComLabel插入多条数据方法 -->
    <insert id="inserts" parameterType="List" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into com_label (id,name) values 
        <foreach collection="comlabels" item="item" separator=",">
            (
                #{item.id},
                #{item.name}
            ) 
        </foreach>
    </insert>

    <!-- 根据ComLabel条件修改单条数据方法,从传入对象获取主键id -->
    <update id="updateById" parameterType="ComLabel">
        update com_label 
        <set>
            <if test="name != null">name = #{name},</if>
        </set>
        where id = #{id}
    </update>

</mapper>