<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xsyx.dao.SearchRecordDao">




    <!-- resultMap映射 -->
    <resultMap id="SearchRecordMap" type="SearchRecord">
        <id column="id" property="id"/>
        <result column="content" property="content"/>
        <result column="time" property="time"/>
        <association property="user" column="{fk=user}"
           select="com.xsyx.dao.UserDao.a_User_By_user" javaType="User" fetchType="lazy"/>
    </resultMap>

    <!-- 查询所有方法 -->
    <select id="queryAll" resultMap="SearchRecordMap">
       select id,time,user,content from search_record;
    </select>

    <!-- 根据主键id查询数据方法 -->
    <select id="queryById" parameterType="int" resultMap="SearchRecordMap">
       select id,time,user,content from search_record where id = #{id};
    </select>

    <!-- 根据SearchRecord条件查询数据方法 -->
    <select id="query" resultMap="SearchRecordMap">
        select id,time,user,content 
        from search_record 
        <where>
            <if test="id != null"> and id = #{id}</if>
            <if test="user != null">
                 <if test="user.id != null"> and user = #{user.id}</if>
            </if>
            <if test="content != null"> and content = #{content}</if>
            <if test="time != null"> and time = #{time}</if> 
        </where>
    </select>

    <!-- 根据SearchRecord插入数据方法 -->
    <insert id="insert" parameterType="SearchRecord" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into search_record (id,user,content,time) values 
        (
            #{id},
            #{user.id},
            #{content},
            <if test="time != null">#{time}</if><if test="time == null">default</if>
        ); 
    </insert>

    <!-- 根据SearchRecord插入多条数据方法 -->
    <insert id="inserts" parameterType="List" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into search_record (id,user,content,time) values 
        <foreach collection="searchrecords" item="item" separator=",">
            (
                #{item.id},
                #{item.user.id},
                #{item.content},
                <if test="item.time != null">#{item.time}</if><if test="item.time == null">default</if>
            ) 
        </foreach>
    </insert>

    <!-- 根据SearchRecord条件修改单条数据方法,从传入对象获取主键id -->
    <update id="updateById" parameterType="SearchRecord">
        update search_record 
        <set>
            <if test="user != null">
                <if test="user.id != null">user = #{user.id},</if>
            </if>
            <if test="content != null">content = #{content},</if>
            <if test="time != null">time = #{time},</if>
        </set>
        where id = #{id}
    </update>

</mapper>