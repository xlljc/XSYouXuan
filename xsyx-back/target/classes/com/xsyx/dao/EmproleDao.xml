<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xsyx.dao.EmproleDao">




    <!-- resultMap映射 -->
    <resultMap id="EmproleMap" type="Emprole">
        <id column="id" property="id"/>
        <result column="employee" property="employee"/>
        <result column="role" property="role"/>
    </resultMap>

    <!-- 查询所有方法 -->
    <select id="queryAll" resultMap="EmproleMap">
       select role,id,employee from emprole;
    </select>

    <!-- 根据主键id查询数据方法 -->
    <select id="queryById" parameterType="int" resultMap="EmproleMap">
       select role,id,employee from emprole where id = #{id};
    </select>

    <!-- 根据Emprole条件查询数据方法 -->
    <select id="query" resultMap="EmproleMap">
        select role,id,employee 
        from emprole 
        <where>
            <if test="id != null"> and id = #{id}</if>
            <if test="employee != null"> and employee = #{employee}</if>
            <if test="role != null"> and role = #{role}</if> 
        </where>
    </select>

    <!-- 根据Emprole插入数据方法 -->
    <insert id="insert" parameterType="Emprole" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into emprole (id,employee,role) values 
        (
            #{id},
            #{employee},
            #{role}
        ); 
    </insert>

    <!-- 根据Emprole插入多条数据方法 -->
    <insert id="inserts" parameterType="List" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into emprole (id,employee,role) values 
        <foreach collection="emproles" item="item" separator=",">
            (
                #{item.id},
                #{item.employee},
                #{item.role}
            ) 
        </foreach>
    </insert>

    <!-- 根据Emprole条件修改单条数据方法,从传入对象获取主键id -->
    <update id="updateById" parameterType="Emprole">
        update emprole 
        <set>
            <if test="employee != null">employee = #{employee},</if>
            <if test="role != null">role = #{role},</if>
        </set>
        where id = #{id}
    </update>

</mapper>