<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xsyx.dao.UserLogDao">




    <!-- resultMap映射 -->
    <resultMap id="UserLogMap" type="UserLog">
        <id column="id" property="id"/>
        <result column="content" property="content"/>
        <result column="data" property="data"/>
        <result column="time" property="time"/>
        <association property="user" column="{fk=user}"
           select="com.xsyx.dao.UserDao.a_User_By_user" javaType="User" fetchType="lazy"/>
    </resultMap>

    <!-- 查询所有方法 -->
    <select id="queryAll" resultMap="UserLogMap">
       select data,id,time,user,content from user_log;
    </select>

    <!-- 根据主键id查询数据方法 -->
    <select id="queryById" parameterType="int" resultMap="UserLogMap">
       select data,id,time,user,content from user_log where id = #{id};
    </select>

    <!-- 根据UserLog条件查询数据方法 -->
    <select id="query" resultMap="UserLogMap">
        select data,id,time,user,content 
        from user_log 
        <where>
            <if test="id != null"> and id = #{id}</if>
            <if test="user != null">
                 <if test="user.id != null"> and user = #{user.id}</if>
            </if>
            <if test="content != null"> and content = #{content}</if>
            <if test="data != null"> and data = #{data}</if>
            <if test="time != null"> and time = #{time}</if> 
        </where>
    </select>

    <!-- 根据UserLog插入数据方法 -->
    <insert id="insert" parameterType="UserLog" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into user_log (id,user,content,data,time) values 
        (
            #{id},
            #{user.id},
            #{content},
            #{data},
            <if test="time != null">#{time}</if><if test="time == null">default</if>
        ); 
    </insert>

    <!-- 根据UserLog插入多条数据方法 -->
    <insert id="inserts" parameterType="List" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into user_log (id,user,content,data,time) values 
        <foreach collection="userlogs" item="item" separator=",">
            (
                #{item.id},
                #{item.user.id},
                #{item.content},
                #{item.data},
                <if test="item.time != null">#{item.time}</if><if test="item.time == null">default</if>
            ) 
        </foreach>
    </insert>

    <!-- 根据UserLog条件修改单条数据方法,从传入对象获取主键id -->
    <update id="updateById" parameterType="UserLog">
        update user_log 
        <set>
            <if test="user != null">
                <if test="user.id != null">user = #{user.id},</if>
            </if>
            <if test="content != null">content = #{content},</if>
            <if test="data != null">data = #{data},</if>
            <if test="time != null">time = #{time},</if>
        </set>
        where id = #{id}
    </update>

    <!-- 根据UserLog插入数据方法 -->
    <insert id="addLog">
        insert into user_log (id,user,content,data,time) values
        (null,#{userId},#{content},#{data},default);
    </insert>

</mapper>