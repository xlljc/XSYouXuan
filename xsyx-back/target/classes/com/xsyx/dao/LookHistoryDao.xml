<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xsyx.dao.LookHistoryDao">




    <!-- resultMap映射 -->
    <resultMap id="LookHistoryMap" type="LookHistory">
        <id column="id" property="id"/>
        <result column="time" property="time"/>
        <association property="user" column="{fk=user}"
           select="com.xsyx.dao.UserDao.a_User_By_user" javaType="User" fetchType="lazy"/>
        <association property="cid" column="{fk=cid}"
           select="com.xsyx.dao.CommodityDao.a_Commodity_By_cid" javaType="Commodity" fetchType="lazy"/>
    </resultMap>

    <!-- 查询所有方法 -->
    <select id="queryAll" resultMap="LookHistoryMap">
       select id,time,user,cid from look_history;
    </select>

    <!-- 根据主键id查询数据方法 -->
    <select id="queryById" parameterType="int" resultMap="LookHistoryMap">
       select id,time,user,cid from look_history where id = #{id};
    </select>

    <!-- 根据LookHistory条件查询数据方法 -->
    <select id="query" resultMap="LookHistoryMap">
        select id,time,user,cid 
        from look_history 
        <where>
            <if test="id != null"> and id = #{id}</if>
            <if test="user != null">
                 <if test="user.id != null"> and user = #{user.id}</if>
            </if>
            <if test="cid != null">
                 <if test="cid.id != null"> and cid = #{cid.id}</if>
            </if>
            <if test="time != null"> and time = #{time}</if> 
        </where>
    </select>

    <!-- 根据LookHistory插入数据方法 -->
    <insert id="insert" parameterType="LookHistory" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into look_history (id,user,cid,time) values 
        (
            #{id},
            #{user.id},
            #{cid.id},
            <if test="time != null">#{time}</if><if test="time == null">default</if>
        ); 
    </insert>

    <!-- 根据LookHistory插入多条数据方法 -->
    <insert id="inserts" parameterType="List" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into look_history (id,user,cid,time) values 
        <foreach collection="lookhistorys" item="item" separator=",">
            (
                #{item.id},
                #{item.user.id},
                #{item.cid.id},
                <if test="item.time != null">#{item.time}</if><if test="item.time == null">default</if>
            ) 
        </foreach>
    </insert>

    <!-- 根据LookHistory条件修改单条数据方法,从传入对象获取主键id -->
    <update id="updateById" parameterType="LookHistory">
        update look_history 
        <set>
            <if test="user != null">
                <if test="user.id != null">user = #{user.id},</if>
            </if>
            <if test="cid != null">
                <if test="cid.id != null">cid = #{cid.id},</if>
            </if>
            <if test="time != null">time = #{time},</if>
        </set>
        where id = #{id}
    </update>

</mapper>